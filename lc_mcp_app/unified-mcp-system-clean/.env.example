# LC MCP App Configuration Example
# Copy this file to .env and update the values

# App Configuration
APP_HOST=0.0.0.0
APP_PORT=8001
APP_LOG_LEVEL=info
ENVIRONMENT=development

# Security (comma-separated list of API keys)
API_KEYS=local-dev-key-123,another-key-456

# Rate Limiting
RATE_LIMIT_RPM=120
RATE_LIMIT_BURST=60

# MCP Server Configuration
MCP_SERVER_BASE_URL=http://localhost:8081
MCP_USERNAME=
MCP_PASSWORD=
MCP_TIMEOUT_S=30.0
MCP_MAX_CONNECTIONS=20
MCP_MAX_KEEPALIVE=10

# OpenAI Compatibility (for actual LLM integration)
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL_NAME=gpt-4o-mini
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.2

# Agent Configuration
AGENT_TIMEOUT_S=120.0
AGENT_MAX_ITERATIONS=10
AGENT_VERBOSE=false

# Observability
METRICS_ENABLED=true
TRACING_ENABLED=false
LOG_FORMAT=json

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
